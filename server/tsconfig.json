{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist/src",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "#global/*": ["./src/global/*"],
      "#services/*": ["./src/services/*"],
      "#filters/*": ["./src/filters/*"],
      "#guards/*": ["./src/guards/*"],
      "#app/*": ["./src/app/*"],
      "#core/*": ["./src/core/*"],
      "#assets/*": ["./src/assets/*"],
      "#configs/*": ["./src/configs/*"],
      "#database/*": ["./src/database/*"],
      "#utils/*": ["./src/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist", "sdk"]
}
